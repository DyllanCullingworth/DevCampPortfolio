<h1>New portfolio item</h1>

<%= form_with model: @portfolio_item, local: true do |f| %>

  <div class="field">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>

  <div class="field">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>

  <div class="field">
    <%= f.label :body %>
    <%= f.text_field :body %>
  </div>

  <div class="field">
    <%= f.label :main_image %>
    <%= f.text_field :main_image %>
  </div>

  <div class="field">
    <%= f.label :thumb_image %>
    <%= f.text_field :thumb_image %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>